<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="Post"
            type="com.projects.instaclient.model.Post" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragments.addpost.DescribeNewPostFragment">

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:textStyle="normal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change description:"
                android:textAlignment="textStart"
                android:textSize="17sp"
                android:textColor="#000000"
                android:fontFamily="@font/roboto_medium"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailLoginTextInput"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:theme="@style/LoginAndRegisterTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeWidth="2dp"
                app:boxCornerRadiusBottomEnd="10dp"
                android:layout_marginVertical="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:counterEnabled="true"
                app:counterMaxLength="400">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/descriptionEditPostEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Description"
                    android:maxLines="9"
                    android:text="@{Post.description}"
                    android:textAlignment="textStart"
                    android:textColor="#222222"
                    android:textColorHint="#2222FF" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:textStyle="normal"
                android:layout_marginBottom="5dp"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose location:"
                android:textAlignment="textStart"
                android:textSize="17sp"
                android:textColor="#000000"
                android:fontFamily="@font/roboto_medium"
                />
            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:drawableLeft="@drawable/choose_location"
                    android:id="@+id/editLocationButton"
                    android:backgroundTint="#007BFF"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:text="Open map"/>
                <TextView
                    android:drawableLeft="@drawable/location"
                    android:textAlignment="textStart"
                    android:textStyle="normal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="7dp"
                    android:text="@{Post.location}"
                    android:textSize="17sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/roboto_medium"
                    />
            </LinearLayout>

            <TextView
                android:textStyle="normal"
                android:layout_marginBottom="5dp"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add or delete tags:"
                android:textAlignment="textStart"
                android:textSize="17sp"
                android:textColor="#000000"
                android:fontFamily="@font/roboto_medium"
                />

            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:drawableLeft="@drawable/choose_tag"
                    android:id="@+id/chooseEditTagButton"
                    android:backgroundTint="#007BFF"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:text="Choose tag"/>
                <Button
                    android:drawableLeft="@drawable/add_tag"
                    android:id="@+id/createEditTagButton"
                    android:backgroundTint="#007BFF"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:text="Create tag"/>
            </LinearLayout>

            <com.google.android.material.chip.ChipGroup
                android:layout_marginHorizontal="20dp"
                android:id="@+id/tagsChipGroup"
                app:singleSelection="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:drawableLeft="@drawable/cancel"
                android:id="@+id/cancelEditPostButton"
                android:backgroundTint="#DC3545"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:text="Cancel"/>
            <Button
                android:drawableLeft="@drawable/check"
                android:id="@+id/saveEditPostButton"
                android:backgroundTint="#28A745"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:text="Save"/>
        </LinearLayout>
    </RelativeLayout>
</layout>