<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.MainActivity"
        android:background="@drawable/instagram_gradient"
        android:gravity="center">

        <TextView
            android:id="@+id/instagramBypassTextView"
            android:textStyle="normal"
            android:layout_marginVertical="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/instragram"
            android:text="Instagram"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="55sp" />

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp">
            <LinearLayout
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailLoginTextInput"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:theme="@style/LoginAndRegisterTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeWidth="2dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    android:layout_marginVertical="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:textColorHint="#2222FF"
                        android:textColor="#222222"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:text="green54@gmail.com"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordLoginTextInput"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:theme="@style/LoginAndRegisterTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="10dp"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeWidth="2dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:passwordToggleTint="#888888"
                    app:passwordToggleEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:textColorHint="#2222FF"
                        android:textColor="#222222"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:text="jkasfkj123!"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:backgroundTint="@color/blue"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="15dp"
                    android:textColor="@color/white"
                    android:id="@+id/loginButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="50dp"
                    android:layout_gravity="center"
                    android:text="LOGIN"/>

                <Button
                    android:padding="0dp"
                    android:textStyle="normal"
                    android:backgroundTint="@color/white"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:id="@+id/goToRegisterPageLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#007BFF"
                    android:layout_gravity="center"
                    android:stateListAnimator="@null"
                    android:text="Don't have an account? \n Register here"
                    android:autoLink="all" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>