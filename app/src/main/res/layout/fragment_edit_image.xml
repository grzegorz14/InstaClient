<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#000000"
        tools:context=".view.fragments.addpost.AcceptImagePostFragment">

        <LinearLayout
            android:id="@+id/tranformImageLinearLayout"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:background="@drawable/rotate_left"
                android:id="@+id/rotateLeftButton"
                android:backgroundTint="#007BFF"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"/>
            <Button
                android:background="@drawable/rotate_right"
                android:id="@+id/rotateRightButton"
                android:backgroundTint="#007BFF"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"/>
            <Button
                android:background="@drawable/grayscale"
                android:id="@+id/grayscaleButton"
                android:backgroundTint="#007BFF"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"/>
            <Button
                android:background="@drawable/negate"
                android:id="@+id/negateButton"
                android:backgroundTint="#007BFF"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/editImageImageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:drawableLeft="@drawable/cancel"
                android:id="@+id/cancelEditImageButton"
                android:backgroundTint="#DC3545"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:text="CANCEL"/>
            <Button
                android:drawableLeft="@drawable/check"
                android:id="@+id/acceptEditImageButton"
                android:backgroundTint="#28A745"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:text="Accept"/>
        </LinearLayout>
    </LinearLayout>
</layout>